<div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4 flex flex-col my-2">

<%= form_with(model: service, local: true, class: "service-form") do |form| %>
  <% if service.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(service.errors.count, "error") %> prohibited this service from being saved:</h2>

      <ul>
        <% service.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <h3 class="mb-4"> Service Informations</h3>

  <div class="-mx-3 md:flex mb-6">
    <div class="md:w-full px-3 mb-6 md:mb-0">
      <%= form.label :image, class: "label" %>
      <%= form.text_field :image, class: "input" %>
    </div>
  </div>

  <div class="-mx-3 md:flex mb-6">
    <div class="md:w-full px-3 mb-6 md:mb-0">
      <%= form.label :title, class: "label" %>
      <%= form.text_field :title, 
          class: "appearance-none block w-full bg-grey-lighter text-grey-darker border border-red rounded py-3 px-4 mb-3", 
          placeholder: "Haircut"
          
      %>
    </div>
  </div>

  <div class="-mx-3 md:flex mb-6">
    <div class="md:w-full px-3">
      <%= form.label :description, class: "label" %>
      <%= form.text_area :description, class: "appearance-none block w-full bg-grey-lighter text-grey-darker border border-grey-lighter rounded py-3 px-4 mb-3",
          rows: "3",
          placeholder: "I make your hair look amazing"
      %>
      <p class="text-grey-dark text-xs italic">Make it as long and as crazy as you'd like</p>
    </div>
  </div>

  <div class="-mx-3 md:flex mb-2">
    <div class="md:w-1/2 px-3 mb-6 md:mb-0">
      <%= form.label :cost, class: "label" %>
      <%= form.number_field :cost, class: "appearance-none block w-full bg-grey-lighter text-grey-darker border border-grey-lighter rounded py-3 px-4",
          placeholder: "10 $"
      %>
    </div>

    <div class="md:w-1/2 px-3">
      <%= form.label :duration, class: "label" %>
      <div class="relative">
        <div class="block appearance-none w-full bg-grey-lighter border border-grey-lighter text-grey-darker py-3 px-4 pr-8 rounded">
          <%= form.select :duration, "15 minutes": "15", 
                                    "30 minutes": "30",
                                    "45 minutes": "45",
                                    "1 hour": "60"
          %>
        </div>
      </div>
    </div>

    <div class="md:w-1/2 px-3">
      <%= form.label :category, class: "label" %>
      <%= form.text_field :category, class: "appearance-none block w-full bg-grey-lighter text-grey-darker border border-grey-lighter rounded py-3 px-4",
          placeholder: "Beauty"
      %>
    </div>
  </div>



  <hr class="border mb-2"/>

  <%= form.submit class:"btn btn-primary text-base py-3 px-5" %>
<% end %>
